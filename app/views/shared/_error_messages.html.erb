<% if object.errors.any? %>
  <div id="error_explanation">
    <h2>There were <%= pluralize(object.errors.count, "error") %>
        validation problems with <%= object.class.to_s.underscore.humanize.downcase %></h2>
    <p>There were problems with the following fields:</p>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>