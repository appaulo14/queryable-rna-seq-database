    <% href = 'http://www.ncbi.nlm.nih.gov/books/NBK1763/table/CmdLineAppsManual.T.tblastx_application_/' %>
    <a target="_blank" href="<%= href %>"><%= href %></a>
    </li>
  </ol>
</div>
