jQuery(document).ready(function($) {
  //Create the text for the help qtips
  create_qtips();
});

function create_qtips(){
  //Declare variables
  var elements = [];
  var titles = [];
  var texts = [];
  
  elements[0] = 'upload_fasta_sequences_htip';
  titles[0] = 'Upload Fasta Sequences';
  <% more_info_path = 'Step-2:-Uploading-Data#wiki-generic_fasta_sequence' %>
  texts[0] = 'Upload a nucleotide fasta file here to create a blast database ' +
              'of the sequences in the fasta file. ' +
              '<%= more_info_link_to_wiki(more_info_path) %>';
              
  elements[1] = 'fasta_file_htip';
  titles[1] = 'Nucleotide Fasta File';
  <% more_info_path = 
      'Step-2:-Uploading-Data#wiki-generic_fasta_sequence-fasta-file' 
  %>
  texts[1] = '<p>Upload a nucleotide fasta sequences file. It should end in ' +
             '.fasta, or .fa.</p>' +
             '<p>This should not be a raw reads file but should instead be ' +
             'something more processed like assembled transcripts or a genome.' +
             '<%= more_info_link_to_wiki(more_info_path) %>';
    
  for (var i = 0; i < elements.length; i++){
    $('#' + elements[i])
          .removeData('qtip') 
          .qtip({
                  content: {
                          text: texts[i], 
                          title: {
                                  text: titles[i],
                                  button: true
                          }
                  },
                  position: {
                          my: 'left center',
                          at: 'right center' 
                  },
                  show: {
                          event: 'click', 
                          ready: false
                  },
                  hide: false,
                  style: {
                          classes: 'qtip-shadow qtip-' + 'light'
                  }
          });
  }
}
