<script src='upload_trinity_with_edger.js'
  type='text/javascript' ></script>
<%= render 'shared/error_messages', :object => @upload %>
<%= form_for( @upload,{:url => "upload_trinity_with_edger"} ) do |u| %>
<h1>Upload Your Trinity With EdgeR Data</h1>

<div class="sub-section rounded-corners" id="dataset_name_section">
  <div class="sub-section-heading">Name Your Dataset</div>
  <p style="text-align:center">
    <%= u.label(:dataset_name, "Dataset Name") %>
    <%= u.text_field :dataset_name %>
  </p>
</div>
<br/><br/>
<div class="sub-section rounded-corners" id="transcript_fasta_section">
  <div class="sub-section-heading">
    Transcript Fasta File
  </div>
  <%= u.label( :transcripts_fasta_file, "Trinity.fasta file" ) %>
  <%= image_tag('question_mark.png', :id=>'trinity_fasta_tooltip') %>
  <%= u.file_field :transcripts_fasta_file %>
</div>
<br/><br/>
<div class="sub-section rounded-corners" id="transcript_section">
  <div class="sub-section-heading">
    Transcripts
  </div>
  <%= u.label(:transcript_fpkm_file, 'Transcript FPKM File') %>
  <%= help_tip(:transcript_fpkm_help_tip) %>
  <%= u.file_field :transcript_fpkm_file %>
  <br/>
  <br/>
  <table class="rounded-corners">
    <caption style="font-weight:bold">Sample Comparisons</caption>
    <thead>
      <tr><th>Number</th><th>File</th><th>Sample 1 Name</th><th>Sample 2 Name</th></tr>
    </thead>
    <tbody id="transcript_sample_comparisons_div">
      
    </tbody>
  </table>
<!--  <div id="transcript_sample_comparisons_div">-->
<!--    <br/>-->
<!--    <b>Sample Comparisons <%= help_tip(:transcript_sample_cmp_htip) %></b>-->
<!--    <br/>-->
<!--  </div>-->
  <br/>
  <%= button_tag("Add Another Sample Comparison",
                {:type => :button, :id => 'btn_add_transcript_sample_cmp'}) %>
  <%= button_tag("Remove a Sample Comparison",
                {:type => :button, :id => 'btn_remove_transcript_sample_cmp'}) %>
</div>
<br/>
<br/>
<%= u.label :has_gene_diff_exp, 
                'Do you have gene (component) different expression tests?' %>
<%= u.check_box :has_gene_diff_exp %>
<div class="sub-section rounded-corners" id="gene_section">
  <div class="sub-section-heading">
    Genes
  </div>
  <div class="sub-section rounded-corners">
    <%= u.label(:gene_fpkm_file, 'Gene FPKM File') %>
    <%= help_tip(:gene_fpkm_help_tip) %>
    <%= u.file_field :gene_fpkm_file %>
  </div>
  <div id="gene_sample_comparisons_div">
    <br/>
    <b>Sample Comparisons <%= help_tip(:gene_sample_cmp_htip) %></b>
    <br/>
  </div>
  <br/>
  <%= button_tag("Add Another Sample Comparison",
                {:type => :button, :id => 'btn_add_gene_sample_cmp'}) %>
  <%= button_tag("Remove a Sample Comparison",
                {:type => :button, :id => 'btn_remove_gene_sample_cmp'}) %>
</div>
<p><%= submit_tag('Upload files', :disable_with => 'Uploading...') %></p>
<% end %>


