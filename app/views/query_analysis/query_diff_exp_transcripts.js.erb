jQuery(document).ready(function($) {
  $('#query_diff_exp_transcripts_dataset_id').change(dataset_id_pair_changed);
  $('#btn_download_as_file').on('click', btn_download_as_file_clicked);
});

function dataset_id_pair_changed(){
  dataset_id = $('#query_diff_exp_transcripts_dataset_id').val();
  request_string = 'get_transcript_diff_exp_samples_for_dataset' +
                   '?dataset_id=' + dataset_id
  $.get(request_string, replace_sample_cmps);
}

function replace_sample_cmps(html){
  $('#sample_comparisons_container').html(html);
}

function btn_download_as_file_clicked(){
  $("#new_query_diff_exp_transcripts").serialize();
}

