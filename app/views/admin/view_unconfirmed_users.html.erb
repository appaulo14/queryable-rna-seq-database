<html>
  <head>
    <title>Unconfirmed Users</title>
    <meta content="">
    <style></style>
  </head>
  <body>
    <h1>Unconfirmed Users</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th><th>Email</th><th>Confirm or Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @unconfirmed_users.each do |user| %>
          <tr>
            <td><%= user.name %></td><td><%= user.email %></td>
            <td><%= link_to('Go to Confirm or Delete Page For User',"confirm_or_delete_user?user_id=#{user.id}") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>