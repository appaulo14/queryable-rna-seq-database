<!-- Modified from http://www.stephenchu.com/2008/03/boost-your-controller-paramsfu.html -->
<%= form_for(@execution_group,{:url => "params_foo      "}) do |f| %>
    <%= f.text_field :name %><br/>
    <% @execution_group.executions.each do |execution| %>
      <%= fields_for execution do |e| %>
      <%= e.text_field :name, :index=>execution.name %><br/>
    <% end %>
  <% end %>
  <%= f.submit 'Save' %>
<% end %>