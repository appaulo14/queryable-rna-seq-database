<header>
  <%= link_to logo, root_path %>
  <h1 id='header_title'>Queryable RNA-Seq Database</h1>
  <br/>
  <nav>
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to 'Home', root_path %></li>
        <!--<li><%= link_to 'Process reads', '/processing_analysis' %></li>-->
        <li><a href="#">Upload processed dataset &#9662;</a>
          <ul class='drop-down-menu'>
            <li><%= link_to 'Cuffdiff', '/query_analysis/upload_cuffdiff' %></li>
            <li><%= link_to 'Nucleotide Fasta Sequences (From Any Program)', 
                            '/query_analysis/upload_fasta_sequences' %></li>
            <li><%= link_to 'Trinity with EdgeR', 
                            '/query_analysis/upload_trinity_with_edger' %></li>
          </ul>
        </li>
        <li><%= link_to 'Run GO Term Finder For A Dataset',
                        '/query_analysis/find_go_terms_for_dataset' %></li>
        <li><a href="#">Differential Expression &#9662;</a>
          <ul class='drop-down-menu'>
            <li>
              <%= link_to 'Transcript Differential Expression', 
                          '/query_analysis/query_diff_exp_transcripts' %>
            </li>
            <li>
              <%= link_to 'Gene Differential Expression', 
                          '/query_analysis/query_diff_exp_genes' %>
            </li>
          </ul>
        </li>
        <li>
          <%= link_to 'Transcript Isoforms', 
                      '/query_analysis/query_transcript_isoforms' %>
        </li>
        <li><a href="#">Blast &#9662;</a>
          <ul  class='drop-down-menu'>
            <li><%= link_to 'BLASTN', '/query_analysis/query_using_blastn' %></li>
            <li><%= link_to 'TBLASTN', '/query_analysis/query_using_tblastn' %></li>
            <li><%= link_to 'TBLASTX', '/query_analysis/query_using_tblastx' %></li>
          </ul>
        </li>
        <% if current_user.admin? %>
          <li><a href="#">Admin &#9662;</a>
            <ul  class='drop-down-menu'>
              <li><%= link_to 'View Unconfirmed Users', '/admin/view_unconfirmed_users' %></li>
              <li><%= link_to 'View Confirmed Users', '/admin/view_confirmed_users' %></li>
            </ul>
          </li>
        <% end %>
        <li>
          <%= link_to('Edit registration', edit_user_registration_path) %>
        </li>
        <li>
          <%= link_to('Logout', destroy_user_session_path, 
                      :method => :delete) %>
        </li>
      <% else %>
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to('Login', new_user_session_path)  %></li>
        <li><%= link_to('Register', new_user_registration_path)  %></li>
      <% end %>
    </ul>
  </nav>
</header> 
